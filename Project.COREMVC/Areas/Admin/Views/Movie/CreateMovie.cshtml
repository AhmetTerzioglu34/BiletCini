@model CreateMoviePageVm


<form style=" margin-left : 25%; " asp-action="CreateMovie" asp-controller="Movie" method="post" class="col-md-6 " enctype="multipart/form-data">

    <div class="mb-3">
        <label>Film İsmini giriniz</label>
        <input asp-for="CreateMoviePureVm.Name" class="form-control" />
        <span asp-validation-for="CreateMoviePureVm.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Film süresini giriniz</label>
        <input asp-for="CreateMoviePureVm.Time" class="form-control" />
        <span asp-validation-for="CreateMoviePureVm.Time" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Film'in Vizyon tarihini giriniz</label>
        <input asp-for="CreateMoviePureVm.VisionDate" type="date" class="form-control" />
        <span asp-validation-for="CreateMoviePureVm.VisionDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Film'in Açıklamasını Yazınız</label>
        <input asp-for="CreateMoviePureVm.Description" class="form-control" />
        <span asp-validation-for="CreateMoviePureVm.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Film'in Başlama tarihini giriniz</label>
        <input asp-for="CreateMoviePureVm.StartingDate" type="date" class="form-control" />
        <span asp-validation-for="CreateMoviePureVm.StartingDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Film'in Bitiş tarihini giriniz</label>
        <input asp-for="CreateMoviePureVm.EndDate" type="date" class="form-control" />
        <span asp-validation-for="CreateMoviePureVm.EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>1.Fotoğrafı yükleyiniz</label>
        <input type="file" name="formFile1" class="form-control" asp-for="CreateMoviePureVm.ImagePath1" />
    </div>

    <div class="mb-3">
        <label>2.Fotoğrafı yükleyiniz</label>
        <input type="file" name="formFile2" class="form-control" asp-for="CreateMoviePureVm.ImagePath2" />
    </div>




    <br />
    <div class="mb-3">
        <button class="btn btn-primary">Film Ekle</button>
    </div>

    <div class="text-danger" asp-validation-summary="ModelOnly">
    </div>

</form>