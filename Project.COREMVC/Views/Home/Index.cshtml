<script>
    // Tüm item öğelerini seçiyoruz
    const items = document.querySelectorAll('.item');

    // Container üzerine fare ile geldiğimizde her bir item'a tıklama olayını tetikliyoruz
    document.querySelector('.container').addEventListener('mouseover', function () {
        items.forEach(function (item) {
            item.click(); // Her item'a tıklama olayı
        });
    });

   
</script>














